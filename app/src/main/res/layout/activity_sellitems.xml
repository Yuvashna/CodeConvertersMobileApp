<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblSell"
        android:layout_width="298dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="50dp"
        android:layout_toEndOf="@+id/imageButtonBack"
        android:gravity="center"
        android:text="Add item to sell"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <Spinner
        android:id="@+id/spinnerCategorySell"
        android:layout_width="202dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="166dp"
        android:layout_marginEnd="171dp"
        android:entries="@array/category_items" />

    <EditText
        android:id="@+id/edtItemDescr"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="05dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_info_24"
        android:drawablePadding="20dp"
        android:hint="Enter in item description"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Switch
        android:id="@+id/switchDonate"
        android:layout_width="127dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="223dp"
        android:layout_marginEnd="256dp"
        android:text="Donate" />

    <ImageView
        android:id="@+id/ImageViewPicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/ButtonSelectImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="102dp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="172dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="119dp"
        android:text="Submit" />

    <Button
        android:id="@+id/ButtonSelectImage"
        android:layout_width="241dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="86dp"
        android:drawableLeft="@android:drawable/ic_menu_camera"
        android:text="Select Image " />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="189dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="27dp"
        android:background="#30ffffff"
        android:ems="10"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/imageButtonBack"
        android:layout_width="60dp"
        android:layout_height="56dp"
        app:srcCompat="?attr/actionModeCloseDrawable" />


</RelativeLayout>